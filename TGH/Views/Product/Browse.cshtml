@model IEnumerable<Models.Product>

@{
    ViewBag.Title = "Browse";
}

<h2>Browse</h2>

<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Brand
        </th>
        <th>
            Price
        </th>
        <th>
            Rating
        </th>
        <th>
            RatingNumber
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>        
        <td>
            @Html.ActionLink(item.Name, "Details", new { id=item.ProductID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductStores.OrderByDescending(d=>d.TimeCreated).Single().SellPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RatingNumber)
        </td>
    </tr>
}

</table>
